<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentalApp.ProfilePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Profile Information" TextColor="#228E7F"/>


            <Label x:Name="InfoDisplay" TextColor="#707070"/>
            
            <Button Text="View Locations"
                    Clicked="OnLocationsClicked" 
                    BackgroundColor="#E29F10" TextColor="White"/>
            <Button Text="View Results"
                    Clicked="OnResultsClicked"
                    BackgroundColor="#E29F10" TextColor="White"/>
            <Button Text="View Carts"
                    Clicked="OnCartsClicked"
                    BackgroundColor="#E29F10" TextColor="White"/>
            <Button Text="View Payments"
                    Clicked="OnPaymentsClicked"
                    BackgroundColor="#E29F10" TextColor="White"/>
            <Label Text="Average User Rating"
                    TextColor="#E29F10"/>
            <Button Text="Home"
                    Clicked="OnHomeClicked"
                    BackgroundColor="#E29F10" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>