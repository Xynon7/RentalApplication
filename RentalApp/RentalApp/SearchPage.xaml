<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentalApp.SearchPage">

    <ScrollView>
    <StackLayout Margin="5"  BackgroundColor="White" x:Name="layout">



        <Label Text="Search" TextColor= "#E29F10" FontSize="23" FontAttributes="Bold"/>
        <Entry Text="{Binding UserName}" Placeholder="Username" PlaceholderColor="#1D9E91" FontSize="18" FontAttributes="Bold" Completed="OnUserNameCompleted"/>
        <Entry Text="{Binding ItemName}" Placeholder="Item name" PlaceholderColor="#1D9E91" FontSize="18" FontAttributes="Bold" Completed="OnItemNameCompleted"/>
        <Entry Text="{Binding Brand}" Placeholder="Item Brand" PlaceholderColor="#1D9E91" FontSize="18" FontAttributes="Bold" Completed="OnBrandCompleted"/>
        <Entry Text="{Binding Type}" Placeholder="Item type" PlaceholderColor="#1D9E91" FontSize="18" FontAttributes="Bold" Completed="OnTypeCompleted"/>

            <Button Text="Search" Clicked="OnSearchClicked"/>

            
        

    </StackLayout>
    </ScrollView>

</ContentPage>