<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentalApp.SearchPage">

    <ScrollView>
    <StackLayout Margin="5"  BackgroundColor="White" x:Name="layout">



            <Label Text="Search" TextColor= "#FBAE33" HorizontalTextAlignment="Center" Margin="0,25" FontSize="30" FontAttributes="Bold"/>
            <Entry Text="{Binding UserName}" Placeholder="Username"  PlaceholderColor="Gray" FontSize="18" FontAttributes="Bold" Completed="OnUserNameCompleted"/>
            <Entry Text="{Binding ItemName}" Placeholder="Item name" PlaceholderColor="Gray" FontSize="18" FontAttributes="Bold" Completed="OnItemNameCompleted"/>
            <Entry Text="{Binding Brand}" Placeholder="Item Brand" PlaceholderColor="Gray" FontSize="18" FontAttributes="Bold" Completed="OnBrandCompleted"/>
            <Entry Text="{Binding Type}" Placeholder="Item type" PlaceholderColor="Gray" FontSize="18" FontAttributes="Bold" Completed="OnTypeCompleted"/>

            <Button Text="Search" Clicked="OnSearchClicked"
                    BackgroundColor= "White" CornerRadius="20" BorderWidth="1.5" BorderColor="#25B6D3" TextColor="#25B6D3" FontAttributes="Bold" Margin="50,50"/>

            
        

    </StackLayout>
    </ScrollView>

</ContentPage>