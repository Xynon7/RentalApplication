<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentalApp.SearchPage">
    
  <StackLayout Margin="5" BackgroundColor="AntiqueWhite">
            
            
            
        <Label Text="Search" />
        <Entry Text="{Binding Brand}" Placeholder="Item Brand" PlaceholderColor="Black"/>
        <Entry Text="{Binding Type}" Placeholder="Item type" PlaceholderColor="Black"/>
        <Entry Text="{Binding HighestCost}" Placeholder="Highest cost" PlaceholderColor="Black"/>
        <Entry Text="{Binding LowestCost}" Placeholder="Lowest Cost" PlaceholderColor="Black"/>
        <Entry Text="{Binding City}" Placeholder="City" PlaceholderColor="Black"/>
        <Entry Text="{Binding Zip}" Placeholder="Zip" PlaceholderColor="Black" />
        <Button Text="View Results" 
                Clicked="OnViewResultsClicked"/>
        

    </StackLayout>
    
</ContentPage>