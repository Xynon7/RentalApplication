<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentalApp.LocationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Locations" />
            <Label Text="*List Locations*" />
            
            <ListView x:Name="LocList"/>
            <Label x:Name="LocationDisplay"/>
            <Entry Text="{Binding Name}" Placeholder="Name" Completed="NameCompleted"/>
            <Entry Text="{Binding Address}" Placeholder="Address" Completed="AddressCompleted"/>
            <Entry Text="{Binding City}" Placeholder="City" Completed="CityCompleted"/>
            <Entry  Placeholder="State" Completed="StateCompleted"/>
            <Entry Text="{Binding Zip}" Placeholder="Zip code" Completed="ZipCompleted"/>
            <Button Text="Add location" Command="{Binding AddLocationCommand}"
                    Clicked="OnAddLocationClicked"/>
            <Button Text="Return to profile"
                    Clicked="OnReturnClicked"/>
            <Button Text="Home"
                    Clicked="OnHomeClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>