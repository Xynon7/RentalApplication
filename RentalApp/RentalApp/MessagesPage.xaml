<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentalApp.MessagesPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>

                <Label Text="All messages sent" TextColor="#228E7F"/>
                <Label x:Name="sentDisplay" TextColor="#228E7F"/>
                <Label Text="All messages recieved" TextColor="#228E7F"/>
                <Label x:Name="recDisplay" TextColor="#228E7F"/>
                <Label Text="Create new message" TextColor="#228E7F"/>
                <Entry  Placeholder="Receiver" Completed="OnRecCompleted"
                        PlaceholderColor="#228E7F"/>
            <Entry  Placeholder="Body" Completed="OnBodyCompleted"
                    PlaceholderColor="#228E7F"/>
            <Button Text="Send" Clicked="OnSendClicked"
                    BackgroundColor="#E29F10" TextColor="White"/>
            <Button Text="Cancel" Clicked="OnCancelClicked"
                    BackgroundColor="#E29F10" TextColor="White"/>
            <Button Text="Home" Clicked="OnHomeClicked"
                    BackgroundColor="#E29F10" TextColor="White"/>
            
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>