<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentalApp.SignUpPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="8"  BackgroundColor="#FAF0EB" >

                

            <Label Text="Date of Birth:" TextColor="#228E7F"/>
            <DatePicker MinimumDate="01/01/1900" MaximumDate="12/23/2010" DateSelected="OnDateSelected"/>

                
                <Entry Text="{Binding Username}" Placeholder="Username" PlaceholderColor="#228E7F" Completed="Username_Completed"/>
                <Entry Text="{Binding Email}" Placeholder="Email" PlaceholderColor="#228E7F" Completed="Email_Completed"/>
                <Entry Text="{Binding Password}" Placeholder="Password" PlaceholderColor="#228E7F" Completed="Password_Completed"/>

                <Entry Placeholder="Phone Number" PlaceholderColor="#228E7F" Completed="PhoneNumber_Completed"/>



                
            
            
            <Button Text="Continue" 
                    Clicked="OnSignUpAppClicked"/>



        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>