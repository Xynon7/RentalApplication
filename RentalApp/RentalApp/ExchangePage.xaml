<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentalApp.ExchangePage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Label Text="Exchanges" TextColor="#228E7F"/>
            <Label x:Name="ExchangeDisplay" TextColor="#707070" FontAttributes="Bold" FontSize="Subtitle" Margin="0,15"/>
            <Button Text="New Exchange" Clicked="OnNewExchangeClicked"
                    BackgroundColor= "#E29F10" TextColor="White"/>
            <Button Text="Home" Clicked="OnHomeClicked"
                    BackgroundColor= "#E29F10" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>