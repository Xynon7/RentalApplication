<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentalApp.ExchangePage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <Label Text="Exchanges"  TextColor= "#FBAE33" HorizontalTextAlignment="Center" Margin="0,25" FontSize="30" FontAttributes="Bold"/>
            <Label x:Name="ExchangeDisplay" TextColor="#707070" FontAttributes="Bold" FontSize="Subtitle" Margin="20,30"/>
            <Button Text="New Exchange" Clicked="OnNewExchangeClicked"
                    BackgroundColor= "White" Margin="50,5" CornerRadius="20" BorderWidth="1.5" BorderColor="#25B6D3" TextColor="#25B6D3" FontAttributes="Bold"/>
            <Button Text="Home" Clicked="OnHomeClicked"
                    BackgroundColor= "White" Margin="50,5" CornerRadius="20" BorderWidth="1.5" BorderColor="#25B6D3" TextColor="#25B6D3" FontAttributes="Bold"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>