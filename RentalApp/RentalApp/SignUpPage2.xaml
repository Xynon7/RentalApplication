<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentalApp.SignUpPage2">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#FAF0EB" Padding="10" >
            <Label Text="State ID"  TextColor="#228E7F"/>
            <Label Text="Upload Image of above *figure out how to do this*" TextColor="#228E7F"/>
            <Entry Text="{Binding SSN}" Placeholder="SSN" PlaceholderColor="#228E7F"/>
            <Button Text="Add a location"
                    Clicked="OnAddLoactionClicked" TranslationY="20" BackgroundColor="White" TextColor="#707070"/>
            <Button Text="Terms and Conditions"
                    Clicked="OnTermsClicked"    TranslationY="20" 
                    BackgroundColor="White" TextColor="#707070"/>
            <Button Text="Privacy Policy"
                    Clicked="OnPrivacyClicked" TranslationY="20"
                    BackgroundColor="White" TextColor="#707070"/>
            <Button Text="Standards Policy"
                    Clicked="OnStandardsClicked" TranslationY="20"
                    BackgroundColor="White" TextColor="#707070"/>
            <Button Text="Submit"
                    Clicked="OnSubmitClicked" TranslationY="20"
                    BackgroundColor="White" TextColor="#707070"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>