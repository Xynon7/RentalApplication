<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RentalApp.ConfirmationPage">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout  x:Name="layout" Padding="5">
                <Label Text="Rental Confirmation" TextColor="#1D9E91" FontAttributes="Bold" FontSize="Title"/>
                <Label Text="Avaliable?: Yes" TextColor="Black" FontSize="Body"/>
                <Label x:Name="ItemConfirm"/>

                <Image x:Name="ItemImage" />
                <Label Text="Choose a pick up date and a return date" TextColor="Black" FontSize="Body"/>
            <DatePicker MinimumDate="3/10/2021" MaximumDate="12/31/2025" DateSelected="OnDateSelected"/>
            <DatePicker MinimumDate="3/10/2021" MaximumDate="12/31/2025"/>
                <Button Text="Add to Wish List" BackgroundColor="#E4E4E4" TextColor="#E29F10" FontAttributes="Bold" Margin="0,15"/>




            </StackLayout>
            
        </ScrollView>
    </ContentPage.Content>
</ContentPage>